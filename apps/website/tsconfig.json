{
    "extends": "@repo/config-typescript/remix.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~/*": ["./app/*"]
        }
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
        "./**/.server/**/*.ts",
        "./**/.server/**/*.tsx",
        "./**/.client/**/*.ts",
        "./**/.client/**/*.tsx"
    ]
}
