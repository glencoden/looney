{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "globalEnv": [
        "NODE_ENV",
        "DATABASE_URL",
        "OPENAI_API_KEY",
        "SUPABASE_URL",
        "SUPABASE_ANON_KEY",
        "VERCEL_URL",
        "PORT",
        "HOST_SING",
        "STRIPE_SECRET_KEY",
        "TIP_STRIPE_PRICE"
    ],
    "envMode": "loose",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "build/**", "api/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^lint"]
        }
    }
}
